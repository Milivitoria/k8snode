{
  "name": "k8snode-api",
  "version": "1.0.0",
  "description": "Node.js API with TypeScript, Hono.js, and Kubernetes deployment for AWS EKS",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/app.ts",
    "start": "node dist/app.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "hono",
    "kubernetes",
    "aws",
    "eks",
    "jwt",
    "api"
  ],
  "author": "k8snode-team",
  "license": "MIT",
  "dependencies": {
    "hono": "^4.6.0",
    "@hono/node-server": "^1.17.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}